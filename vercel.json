{
    "version": 2,
    "builds": [
    { "src": "public/index.php", "use": "@vercel/php" }
  ],
  "routes": [
        { 
            "src": "/(.*)", "dest": "public/index.php" 
        },
        {
            "src": "/build/assets/(.*)",
            "dest": "/build/assets/$1"
        },
        {
            "src": "/images/(.*)",
            "dest": "/public/images/$1"
        },
        {
            "src": "/(.*\\.php)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}